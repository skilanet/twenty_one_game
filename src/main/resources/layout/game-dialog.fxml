<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="ru.sergey.dev.twenty_one_game.presentation.DialogController"
      alignment="CENTER" spacing="15" style="-fx-background-color: #065903;"
      prefWidth="300" prefHeight="250">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label fx:id="resultLabel" textFill="WHITE">
        <font>
            <Font name="System Bold" size="24.0"/>
        </font>
    </Label>

    <Label fx:id="scoreLabel" textFill="#71ea71">
        <font>
            <Font size="16.0"/>
        </font>
    </Label>

    <HBox alignment="CENTER" spacing="20">
        <Button text="Играть снова" onAction="#playAgain"
                style="-fx-background-color: #4CAF50; -fx-text-fill: #bbffbb;"/>

        <Button text="В главное меню" onAction="#goToMainMenu"
                style="-fx-background-color: #063217; -fx-text-fill: #bbffbb;"/>
    </HBox>
</VBox>